<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.library.login.LoginController">
   <children>
      <Text fx:id="back" layoutX="16.0" layoutY="32.0" onMouseClicked="#goBack" strokeType="OUTSIDE" strokeWidth="0.0" text="&lt;">
         <font>
            <Font size="30.0" />
         </font>
      </Text>
      <Label layoutX="327.0" layoutY="215.0" text="Contraseña:" />
      <Label layoutX="289.0" layoutY="142.0" text="Correo electronico:" />
      <PasswordField fx:id="password" layoutX="403.0" layoutY="210.0" prefHeight="26.0" prefWidth="182.0" promptText="123456">
         <font>
            <Font size="10.0" />
         </font>
      </PasswordField>
      <TextField fx:id="email" layoutX="403.0" layoutY="138.0" prefHeight="26.0" prefWidth="182.0" promptText="a123456@alumnos.uaslp.mx" />
      <Label contentDisplay="CENTER" layoutX="434.0" layoutY="62.0" prefHeight="50.0" prefWidth="120.0" text="Inicio de sesión" textAlignment="JUSTIFY">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <HBox layoutX="26.0" layoutY="39.0" prefHeight="322.0" prefWidth="262.0">
         <children>
            <ImageView fx:id="img" fitHeight="316.0" fitWidth="254.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../assets/UASLP.png" />
               </image>
            </ImageView>
         </children>
      </HBox>
      <Button fx:id="button" layoutX="414.0" layoutY="274.0" mnemonicParsing="false" onAction="#signIn" prefHeight="42.0" prefWidth="151.0" text="Iniciar sesión" />
      <Button fx:id="buttonSignUp" layoutX="444.0" layoutY="326.0" mnemonicParsing="false" onAction="#signUp" prefHeight="17.0" prefWidth="90.0" text="Registrarse" />
      <Label fx:id="errorEmail" layoutX="432.0" layoutY="172.0" prefHeight="17.0" prefWidth="114.0" textFill="RED" />
      <Label fx:id="errorPassword" layoutX="432.0" layoutY="243.0" prefHeight="17.0" prefWidth="114.0" textFill="RED" />
      <Label fx:id="accountNotFound" layoutX="426.0" layoutY="112.0" prefHeight="17.0" prefWidth="126.0" textFill="RED" />
   </children>
</AnchorPane>
